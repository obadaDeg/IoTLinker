# =====================================================
# IoTLinker Enterprise - Environment Variables
# =====================================================

# =====================================================
# FRONTEND ENVIRONMENT VARIABLES
# =====================================================

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=http://127.0.0.1:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_clerk_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_clerk_secret_key_here

# Clerk URLs (customize based on your setup)
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/auth
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/auth
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/

# =====================================================
# BACKEND ENVIRONMENT VARIABLES
# =====================================================

# FastAPI Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=true
API_WORKERS=4

# Supabase Database Connection
DATABASE_URL=postgresql://postgres:postgres@127.0.0.1:54322/postgres
SUPABASE_URL=http://127.0.0.1:54321
SUPABASE_SERVICE_KEY=your_supabase_service_role_key_here
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# TimescaleDB Configuration
TIMESCALE_ENABLED=true

# Redis Configuration (for caching and pub/sub)
REDIS_URL=redis://localhost:6379
REDIS_DB=0
REDIS_PASSWORD=

# MQTT Broker Configuration
MQTT_BROKER_HOST=localhost
MQTT_BROKER_PORT=1883
MQTT_USERNAME=iotlinker
MQTT_PASSWORD=your_mqtt_password_here
MQTT_TOPIC_PREFIX=iotlinker
MQTT_CLIENT_ID=iotlinker-backend

# OpenAI API (for AI features)
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# =====================================================
# SECURITY & AUTHENTICATION
# =====================================================

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# API Keys (for device authentication)
API_KEY_SALT=your_random_salt_for_api_keys_here

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# =====================================================
# NOTIFICATION SERVICES
# =====================================================

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password_or_app_password
SMTP_FROM_EMAIL=noreply@iotlinker.com
SMTP_FROM_NAME=IoTLinker

# Twilio (for SMS notifications)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Slack Webhooks
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# =====================================================
# EXTERNAL INTEGRATIONS
# =====================================================

# Clerk Webhooks (for user sync)
CLERK_WEBHOOK_SECRET=whsec_your_clerk_webhook_secret_here

# Webhook URLs
INTERNAL_WEBHOOK_URL=http://localhost:8000/api/v1/webhooks

# =====================================================
# AWS CONFIGURATION (Production)
# =====================================================

# AWS Credentials
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here

# S3 Storage
S3_BUCKET_NAME=iotlinker-data
S3_ENDPOINT_URL=

# CloudWatch Logs
CLOUDWATCH_LOG_GROUP=/iotlinker/backend
CLOUDWATCH_LOG_STREAM=api

# =====================================================
# MONITORING & LOGGING
# =====================================================

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=logs/iotlinker.log

# Sentry (Error Tracking)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=1.0

# Application Insights (Azure)
APPINSIGHTS_INSTRUMENTATION_KEY=

# =====================================================
# FEATURE FLAGS
# =====================================================

# Feature Toggles
ENABLE_AI_FEATURES=true
ENABLE_PREDICTIVE_ANALYTICS=true
ENABLE_WORKFLOWS=true
ENABLE_API_RATE_LIMITING=true
ENABLE_TELEMETRY=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# =====================================================
# DEVELOPMENT ONLY
# =====================================================

# Debug Settings
DEBUG_SQL=false
DEBUG_MQTT=false
ENABLE_SWAGGER_UI=true

# Mock Data
USE_MOCK_DATA=false
SEED_DATABASE=true

# Testing
TEST_DATABASE_URL=postgresql://postgres:postgres@localhost:54322/postgres_test

# =====================================================
# PRODUCTION SETTINGS (Override in production)
# =====================================================

# Production Database
# DATABASE_URL=postgresql://user:password@production-host:5432/iotlinker

# Production Redis
# REDIS_URL=redis://production-host:6379

# Production MQTT
# MQTT_BROKER_HOST=production-mqtt-broker.com
# MQTT_BROKER_PORT=8883
# MQTT_USE_TLS=true

# CDN Configuration
# CDN_URL=https://cdn.iotlinker.com

# Domain Configuration
# DOMAIN=iotlinker.com
# PROTOCOL=https

# =====================================================
# NOTES
# =====================================================
# 1. Copy this file to .env and fill in your actual values
# 2. Never commit .env file to version control
# 3. Keep production credentials separate and secure
# 4. Use environment-specific .env files (.env.development, .env.production)
# 5. For Supabase keys, get them from: http://localhost:54323 (Supabase Studio)
# 6. For Clerk keys, get them from: https://dashboard.clerk.com
